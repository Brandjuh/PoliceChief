{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Policy Schema",
  "type": "object",
  "required": ["policies"],
  "properties": {
    "policies": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id", "name", "description", "mission_filters", "priority"
        ],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "description": {"type": "string"},
          "mission_filters": {"type": "object"},
          "priority": {"type": "integer"},
          "min_station_level": {"type": "integer", "minimum": 1, "default": 1}
        }
      }
    }
  }
}
