{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Vehicle Schema",
  "type": "object",
  "required": ["vehicles"],
  "properties": {
    "vehicles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id", "name", "description", "vehicle_type",
          "purchase_cost", "maintenance_cost", "fuel_efficiency",
          "cooldown_minutes", "seating_capacity", "prisoner_capacity"
        ],
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"},
          "description": {"type": "string"},
          "vehicle_type": {"type": "string"},
          "purchase_cost": {"type": "integer", "minimum": 0},
          "maintenance_cost": {"type": "integer", "minimum": 0},
          "fuel_efficiency": {"type": "number", "minimum": 0},
          "cooldown_minutes": {"type": "integer", "minimum": 1},
          "seating_capacity": {"type": "integer", "minimum": 0},
          "prisoner_capacity": {"type": "integer", "minimum": 0},
          "equipment_slots": {"type": "integer", "minimum": 0, "default": 0},
          "min_station_level": {"type": "integer", "minimum": 1, "default": 1}
        }
      }
    }
  }
}
